<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Checkout | Your Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <style>
    body {
      background-color: #f1f3f6;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .checkout-container {
      max-width: 900px;
      margin: 50px auto;
    }

    .checkout-card {
      background-color: #fff;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.06);
    }

    .price-box {
      background-color: #e9f5ff;
      border-radius: 8px;
      padding: 15px;
    }

    .btn-checkout {
      width: 100%;
      font-weight: 600;
      padding: 12px;
    }

    h2 {
      font-size: 28px;
      font-weight: 600;
    }

    .product-title {
      font-weight: 500;
    }

    .total-label {
      font-weight: 600;
    }
  </style>
</head>

<body>

  <%- include("nav") %>

    <div class="container checkout-container">
      <h2 class="mb-4">Secure Checkout</h2>
      <div class="checkout-card">

        <div class="d-flex justify-content-between mb-3">
          <span class="h5">Product</span>
          <span class="h5">Subtotal</span>
        </div>
        <hr>

        <% c.forEach(e=> { %>
          <div class="d-flex justify-content-between mb-2">
            <div>
              <%= e.name %> × <%= e.quantity %>
            </div>
            <div>₹ <%= e.totalrice %>
            </div>
          </div>
          <% }) %>

            <hr>

            <div class="price-box mb-3">
              <div class="d-flex justify-content-between mb-2">
                <span>Subtotal</span>
                <span>₹ <%= total %></span>
              </div>
              <div class="d-flex justify-content-between total-label">
                <span>Total</span>
                <span>₹ <%= total %></span>
              </div>
            </div>

            <% if (d.length===0) { %>
              <a href="/getprofile" id="checkoutBtn1" class="btn btn-success btn-checkout">Checkout</a>
              <% } else { %>
                <button id="checkoutBtn" class="btn btn-success btn-checkout">Checkout</button>
                <% } %>

      </div>
    </div>

    <%- include("footer") %>

      <script>
        document.getElementById("checkoutBtn").addEventListener("click", function (e) {
          e.preventDefault();

          var totalAmount = `<%= total * 100 %>`;
          var options = {
            key: "rzp_test_5uPzGreHV3wiCs",
            amount: totalAmount,
            currency: "INR",
            name: "SmartBasket",
            description: "Order Payment",
            image: "https://cdn.pixabay.com/photo/2023/09/12/20/41/ai-generated-8249559_1280.png",
            handler: function (response) {
              alert("Payment Successful! Payment ID: " + response.razorpay_payment_id);
              window.location.href = "placeOrder?payment_id=" + response.razorpay_payment_id + "&amount=" + (totalAmount / 100);
            },
            prefill: {
              email: ""
            },
            theme: {
              color: "#ff5200"
            }
          };

          var rzp1 = new Razorpay(options);
          rzp1.open();
        });
      </script>

      <script>
        document.getElementById("checkoutBtn1").addEventListener("click", () => {
          alert("Create Profile To Checkout!")
        })
      </script>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>